<!doctype html>
<html lang="fa" dir="rtl">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>وب‌سایت رسمی</title>
  <style>
    *{box-sizing:border-box;margin:0;padding:0}
    html,body{height:100%;background:#000;color:#fff;font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial;overflow:hidden}
    .screen{position:fixed;inset:0;display:flex;align-items:center;justify-content:center;text-align:center;flex-direction:column}
    button{
      font-size:clamp(18px,4.5vw,28px);
      padding:1rem 1.25rem;border-radius:16px;border:none;
      background:#fff;color:#000;font-weight:700;cursor:pointer;
      margin-top:20px;
    }
    .face{position:fixed;inset:0;display:grid;place-items:center;background:#000;opacity:0;transition:opacity .1s}
    .face.show{opacity:1}
    .face-inner{transform:scale(0.5);opacity:0;transition:transform .05s linear, opacity .05s linear}
    .face-inner.show{transform:scale(1.2);opacity:1;animation:shake .25s linear 10}
    @keyframes shake{
      0%{transform:translate(0,0) scale(1.2)}
      20%{transform:translate(8px,-8px) scale(1.2)}
      40%{transform:translate(-8px,8px) scale(1.2)}
      60%{transform:translate(8px,8px) scale(1.2)}
      80%{transform:translate(-8px,-8px) scale(1.2)}
      100%{transform:translate(0,0) scale(1.2)}
    }
    .flash{animation:flash .1s steps(1,end) 6}
    @keyframes flash{50%{background:#ff0000}}
    svg{width:min(92vw,920px);height:auto;filter:drop-shadow(0 0 40px rgba(255,0,0,.75))}
  </style>
</head>
<body>
  <!-- صفحه ورود -->
  <main class="screen" id="intro">
    <h1>به وب‌سایت رسمی خوش آمدید</h1>
    <p>برای ادامه، روی «تأیید» کلیک کنید</p>
    <button id="startBtn">تأیید</button>
  </main>

  <!-- صفحه Jump Scare -->
  <section class="face" id="face">
    <div class="face-inner" id="faceInner">
      <svg viewBox="0 0 512 512">
        <circle cx="256" cy="256" r="230" fill="red"/>
        <ellipse cx="166" cy="210" rx="70" ry="55" fill="#000"/>
        <ellipse cx="346" cy="210" rx="70" ry="55" fill="#000"/>
        <circle cx="166" cy="210" r="16" fill="#f00"/>
        <circle cx="346" cy="210" r="16" fill="#f00"/>
        <path d="M120 330 Q256 450 392 330 Q350 360 256 360 Q162 360 120 330Z" fill="#000"/>
      </svg>
    </div>
  </section>

  <script>
    const intro = document.getElementById('intro');
    const face = document.getElementById('face');
    const faceInner = document.getElementById('faceInner');
    const startBtn = document.getElementById('startBtn');

    let audioCtx, masterGain;

    function makeScream(){
      try{
        const ctx = audioCtx;
        const gain = ctx.createGain();
        gain.gain.setValueAtTime(0.0001, ctx.currentTime);
        gain.gain.exponentialRampToValueAtTime(1, ctx.currentTime + 0.05);
        gain.gain.exponentialRampToValueAtTime(0.0001, ctx.currentTime + 1.4);

        const osc = ctx.createOscillator();
        osc.type = 'sawtooth';
        osc.frequency.setValueAtTime(800, ctx.currentTime);
        osc.frequency.exponentialRampToValueAtTime(100, ctx.currentTime + 1);

        osc.connect(gain);
        gain.connect(masterGain);
        osc.start();
        osc.stop(ctx.currentTime + 1.5);
      }catch(e){}
    }

    function vibrate(){
      try{navigator.vibrate([50,100,50,200])}catch(e){}
    }

    function jumpScare(){
      face.classList.add('show');
      faceInner.classList.add('show','flash');
      makeScream();
      vibrate();
    }

    startBtn.addEventListener('click', () => {
      try{
        audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        masterGain = audioCtx.createGain();
        masterGain.connect(audioCtx.destination);
      }catch(e){}
      intro.style.display = 'none';
      setTimeout(jumpScare, 500 + Math.random()*1500);
    });
  </script>
</body>
</html>
